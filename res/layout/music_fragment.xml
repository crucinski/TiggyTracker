<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FAD89D"
   	android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <TableLayout
	        android:id="@+id/table"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
	        <TableRow
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
	                android:text=""
	                android:layout_span="2"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			        
			    </TextView>
	
			</TableRow>
	        
	        <TableRow
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
	                android:text="What's DJ Tiggy Playing Right Now?"
	                android:textColor="#000"
	                android:textSize="16sp"
	                android:textStyle="bold"
	                android:gravity="center"
	                android:layout_weight="1"
	                android:layout_span="2"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			        
			    </TextView>
	
	        </TableRow>
			
			<TableRow
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
	                android:id="@+id/now_playing"
	                android:text=""
	                android:textColor="#000"
	                android:gravity="center"
	                android:layout_weight="1"
	                android:layout_span="2"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			        
			    </TextView>
	
	        </TableRow>
	
			<TableRow
		        android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
			        android:id="@+id/title_label"
			        android:text="Title:   "
			        android:textColor="#000"
			        android:visibility="gone"
			        android:gravity="right"
	                android:layout_weight="0.3"
			        android:layout_width="0px"
			        android:layout_height="match_parent">
			        
			    </TextView>
	    
	            <TextView
			        android:id="@+id/title"
			        android:textIsSelectable="true"
			        android:text=""
			        android:textColor="#000"
			        android:visibility="gone"
			        android:gravity="left"
	                android:layout_weight="0.7"
			        android:layout_width="0px"
			        android:layout_height="match_parent">
			        
			    </TextView>
	            
	        </TableRow>
	        
			<TableRow
		        android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
			        android:id="@+id/artist_label"
			        android:visibility="gone"
			        android:text="Artist:   "
			        android:textColor="#000"
			        android:gravity="right"
	                android:layout_weight="0.3"
			        android:layout_width="0px"
			        android:layout_height="match_parent">
			        
			    </TextView>
	    
	            <TextView
			        android:id="@+id/artist"
			        android:textIsSelectable="true"
			        android:textColor="#000"
			        android:text=""
			        android:visibility="gone"
			        android:gravity="left"
	                android:layout_weight="0.7"
			        android:layout_width="0px"
			        android:layout_height="match_parent">
			        
			    </TextView>
	            
	        </TableRow>
	        
			<TableRow
		        android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
			        android:id="@+id/album_label"
			        android:text="Album:   "
			        android:textColor="#000"
			        android:visibility="gone"
			        android:gravity="right"
	                android:layout_weight="0.3"
			        android:layout_width="0px"
			        android:layout_height="match_parent">
			        
			    </TextView>
	    
	            <TextView
			        android:id="@+id/album"
			        android:textIsSelectable="true"
			        android:text=""
			        android:textColor="#000"
			        android:visibility="gone"
			        android:gravity="left"
	                android:layout_weight="0.7"
			        android:layout_width="0px"
			        android:layout_height="match_parent">
			        
			    </TextView>
	            
	        </TableRow>
	        
			<TableRow
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
	                android:text=""
	                android:layout_span="2"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			        
			    </TextView>
	
			</TableRow>
	        
			<TableRow
		        android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
			        android:id="@+id/last_update_label"
			        android:text="Updated:   "
			        android:textColor="#000"
			        android:gravity="right"
	                android:layout_weight="0.3"
			        android:layout_width="0px"
			        android:layout_height="match_parent">
			        
			    </TextView>
	    
	            <TextView
			        android:id="@+id/last_update"
			        android:text="none"
			        android:textColor="#000"
			        android:gravity="left"
	                android:layout_weight="0.7"
			        android:layout_width="0px"
			        android:layout_height="match_parent">
			        
			    </TextView>
	            
	        </TableRow>
	        
			<TableRow
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
	                android:text=""
	                android:layout_span="2"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			        
			    </TextView>
	
			</TableRow>
	 
	    </TableLayout>
	     <Button
			android:id="@+id/update"
	        android:background="@drawable/nice_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:layout_below="@+id/table"
	        android:textColor="@android:color/black"
			android:textSize="16sp"
			android:shadowRadius="1"
			android:shadowDx="1"
			android:shadowDy="1"
			android:shadowColor="@android:color/black"
	        android:text="Update Now" />
	     <TextView
         	android:id="@+id/spacer"
         	android:layout_width="fill_parent"
         	android:layout_below="@+id/update"
			android:layout_height="17dip" />
	     <TextView
	        android:id="@+id/hr"
         	android:layout_width="fill_parent"
         	android:layout_below="@+id/spacer"
			android:layout_height="2dip"
			android:background="#FF000000" />
	     <TextView
         	android:id="@+id/spacer2"
         	android:layout_width="fill_parent"
         	android:layout_below="@+id/hr"
			android:layout_height="17dip" />
	     <TextView
         	android:id="@+id/request_label"
         	android:text="Have Twitter installed? Make a music request or say hi!"
         	android:textColor="#000"
         	android:textSize="14sp"
         	android:padding="5dp"
         	android:layout_centerInParent="true"
         	android:layout_width="fill_parent"
         	android:layout_below="@+id/spacer2"
			android:layout_height="wrap_content" />
	     <TextView
         	android:id="@+id/spacer3"
         	android:layout_width="fill_parent"
         	android:layout_below="@+id/request_label"
			android:layout_height="17dip" />
	     <LinearLayout
	        android:id="@+id/edittext_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/spacer3"
	        android:padding="5dp"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal" >
			
	         <ImageView
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:contentDescription="Twitter Logo"
			    android:src="@drawable/twitter" />
			
		    <EditText
		        android:id="@+id/editText"
		        android:text="Type here"
		        android:textColor="#888"
		        android:layout_below="@+id/spacer3"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >
	         </EditText>
        </LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/edittext_layout"
	        android:padding="5dp"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal" >
		    
	        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            /> 
			
	        <CheckBox 
	            android:id="@+id/checkbox"
	            android:textSize="14sp"
	            android:textColor="#000"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:checked="true"
	            android:text="#TiggySongRequest"/>
	        
	        <View
	            android:layout_width="5dp"
	            android:layout_height="0dp"
            /> 
	        
		    <Button
				android:id="@+id/request_button"
		        android:background="@drawable/nice_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@android:color/black"
				android:textSize="16sp"
				android:shadowRadius="1"
				android:shadowDx="1"
				android:shadowDy="1"
				android:shadowColor="@android:color/black"
		        android:text="Preview Tweet" />
	    </LinearLayout>
	     
     </RelativeLayout>
</ScrollView>